<html>
  <head>
    <meta content="text/html; charset=utf-8" http-equiv="Content-Type">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/metro/4.1.5/css/metro.min.css">
   
        <!-- add hiden information to the page which is resolved in OrdersHeader template
             during the pdf merge. See the docs about pdf utils extension for more details. -->
      <h1>Report Details</h1><br>
        <table class='table striped'>
            <thead>
                <tr>

                    <th>Item Name</th>
                    <th>Item Type</th>
                    <th>Weight</th>
                    <th>Amount</th>
                    <th>Order Date</th>
                    <th>Date</th>
                    <th>Month</th>
                    <th>Year</th>
                </tr>
            </thead>
            <tbody>
                  {{#each items}}
                <tr>
                    <td>{{itemName}}</td>
                    <td>{{itemType}}</td>
                    <td>{{weight}}</td>
                     <td>{{totalAmount}}</td>
                    <td>{{orderDate}}</td>
                    <td>{{date}}</td>
                     <td>{{month}}</td>
                    <td>{{year}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        <div style='page-break-after: always;'>
        </div>
  </body>
</html>